# =============================================================================
# Eryndor MMO - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your production values
# IMPORTANT: Never commit .env file to git - it contains secrets!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server bind address (use 0.0.0.0 for production to accept external connections)
SERVER_ADDR=0.0.0.0

# Server ports
SERVER_PORT=5001              # UDP port for native clients
SERVER_PORT_WEBSOCKET=5003    # WebSocket port for WASM clients
SERVER_PORT_WEBTRANSPORT=5002 # WebTransport port (not used in production with nginx)
SERVER_CERT_PORT=8080         # HTTP port for certificate hash endpoint

# =============================================================================
# SECURITY
# =============================================================================

# JWT secret for admin dashboard (generate with: openssl rand -hex 64)
# CRITICAL: Change this in production!
JWT_SECRET=REPLACE_WITH_64_CHARACTER_HEX_SECRET

# =============================================================================
# OAUTH (Optional - for Google Sign-In)
# =============================================================================

# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# DATABASE
# =============================================================================

# Path to SQLite database file
DATABASE_PATH=/var/lib/eryndor/eryndor.db

# =============================================================================
# LOGGING
# =============================================================================

# Logging level: trace, debug, info, warn, error
RUST_LOG=info
